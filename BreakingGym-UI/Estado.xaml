<Window x:Class="BreakingGym_UI.Estado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGym_UI"
        mc:Ignorable="d"
        Title="Estado" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid x:Name="dgMostrarEstado" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="410,88,28,33" RenderTransformOrigin="0.5,0.5" SelectionChanged="dgMostrarEstado_SelectionChanged" >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.094"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Button x:Name="BtnModificar" Content="" HorizontalAlignment="Left" Margin="298,242,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="BtnModificar_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnEliminar" Content="" HorizontalAlignment="Left" Margin="178,242,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="BtnEliminar_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnGuardar" Content="" HorizontalAlignment="Left" Margin="47,242,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="BtnGuardar_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="txtEstado" HorizontalAlignment="Left" Margin="80,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246" Height="32"/>
        <Label Content="Nombre de estado" HorizontalAlignment="Left" Margin="114,132,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Width="188" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Estado" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Height="64" Foreground="White" FontFamily="Arial Rounded MT Bold"/>
        <Button x:Name="btnRegresar" Content="" HorizontalAlignment="Left" Margin="728,10,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="btnRegresar_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/regreso.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="TxtId" HorizontalAlignment="Left" Margin="47,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38"/>

    </Grid>
</Window>
