<mah:MetroWindow x:Class="BreakingGymUI.InicioEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakingGymUI"
                     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="InicioEmpleado" Height="450" Width="800">
    <Grid>
        <DockPanel Height="38" LastChildFill="False" VerticalAlignment="Top" Background="#FF28628C">

            <Button x:Name="btnInscripcion" Width="148" Height="46" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}" Click="btnInscripcion_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="37" Width="113">
                    <TextBlock Text="Inscripción" FontSize="14" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" Width="81" Height="20"/>
                    <Image Source="/registro-en-linea.png" Width="32" Height="26" StretchDirection="DownOnly"/>
                </StackPanel>
            </Button>

            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnAsistencia" Width="149" Height="41" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFFF8F8" Click="btnAsistencia_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="111">
                    <!-- Texto del botón -->
                    <TextBlock Text="Asistencia" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/lista-de-contactos.png" Width="32" Height="30"/>
                    <!-- Imagen al lado del texto -->
                </StackPanel>
            </Button>
            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnCliente" Width="151" Height="41" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="btnCliente_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="47" Width="93">
                    <TextBlock Text="Cliente" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/avatar.png" Width="33" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <GridSplitter Background="#FFAEAEB2" DockPanel.Dock="Right" Width="2"/>

            <GridSplitter Background="#FFAEAEB2" Width="2"/>
            <Menu DockPanel.Dock="Right" Width="43" >
                <Menu.Background>
                    <ImageBrush ImageSource="/boton.png"/>
                </Menu.Background>
                <MenuItem Header="" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="13" Height="40" Width="42" Background="{x:Null}">
                    <MenuItem x:Name="btnSalir" Header="Salir del Sistema" Background="#FF28628C" Click="btnSalir_Click" />
                    <MenuItem x:Name="btnCerrarSesion" Header="Cerrar Sesión" Background="#FF28628C" Click="btnCerrarSesion_Click"/>
                </MenuItem>
            </Menu>
            <GridSplitter Background="#FFAEAEB2"  DockPanel.Dock="Right" Width="2"/>

        </DockPanel>
        <Label Content="¡Bienvenido a Inicio!" HorizontalAlignment="Center" Height="63" VerticalAlignment="Top" Width="402" FontFamily="Times New Roman" FontSize="45" Margin="0,91,0,0"/>
        <Image Source="/0a5bcaaf-ccf2-49de-9d75-1f233391d1de.png" Margin="317,149,317,95"/>
    </Grid>

</mah:MetroWindow>
