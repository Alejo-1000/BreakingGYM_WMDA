<mah:MetroWindow x:Class="BreakingGymUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Login.jpg"/>
        </Grid.Background>
        <Button x:Name="btnIniciar" Content="Iniciar Sesion" HorizontalAlignment="Left" Margin="447,305,0,0" VerticalAlignment="Top" Width="211" Background="#FF63BCCE" Click="btnIniciar_Click" BorderBrush="{x:Null}" Height="26" Foreground="#FF130909" FontFamily="Arial Rounded MT Bold" FontSize="12"/>
        <Button x:Name="btnCerrar" Content="Salir" HorizontalAlignment="Left" Margin="447,345,0,0" VerticalAlignment="Top" Width="211" Background="#FF8698A9" BorderBrush="{x:Null}" Foreground="#FF190606" FontFamily="Arial Rounded MT Bold" FontSize="12"/>
        <TextBox x:Name="txtCorreo" HorizontalAlignment="Left" Margin="447,190,0,0" TextWrapping="Wrap" Text="Ingrese el correo" VerticalAlignment="Top" Width="211" TextChanged="txtCorreo_TextChanged"/>
        <Label Content="Bienvenido" HorizontalAlignment="Left" Margin="539,141,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="20"/>
        <PasswordBox x:Name="txtContrasenia" HorizontalAlignment="Left" Margin="447,249,0,0" VerticalAlignment="Top" Width="211"/>
        <TextBox x:Name="txtVisible" HorizontalAlignment="Left" Visibility="Collapsed" Margin="447,249,0,0" VerticalAlignment="Top" Width="211"/>
        <Button x:Name="btnMostrar" Width="31" Height="26" 
                HorizontalAlignment="Right" Margin="0,249,90,0" VerticalAlignment="Top"
                Click="btnMostrar_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/ojo_abierto.png"/>
            </Button.Background>
        </Button>
    </Grid>
</mah:MetroWindow>
