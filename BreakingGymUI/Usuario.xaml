<Window x:Class="BreakingGymUI.Usuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="Usuario" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnGuardar" Content="" HorizontalAlignment="Left" Margin="480,338,0,0" VerticalAlignment="Top" Height="50" Width="50">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnEliminar" Content="" HorizontalAlignment="Left" Margin="587,338,0,0" VerticalAlignment="Top" Height="50" Width="50">
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnModificar" Content="" HorizontalAlignment="Left" Margin="692,338,0,0" VerticalAlignment="Top" Height="50" Width="50">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnBuscar" Content="" HorizontalAlignment="Left" Margin="49,112,0,0" VerticalAlignment="Top" Height="25" Width="25" RenderTransformOrigin="1.221,-0.078">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnRegresar" Content="" HorizontalAlignment="Left" Margin="740,10,0,0" VerticalAlignment="Top" Height="50" Width="50">
            <Button.Background>
                <ImageBrush ImageSource="/regreso.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnRefrescar" Content="" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Height="25" Width="24" RenderTransformOrigin="0.506,0.547">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>
        </Button>
        <Label Content="Rol" HorizontalAlignment="Left" Margin="476,207,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Cuenta" HorizontalAlignment="Left" Margin="475,246,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Celular" HorizontalAlignment="Left" Margin="475,164,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Apellido" HorizontalAlignment="Left" Margin="476,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.534,0.297" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="475,73,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="476,289,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <Label Content="Usuario" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="36"/>
        <Label Content="Buscar Usuario" HorizontalAlignment="Left" Margin="162,73,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White" FontSize="18"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="186,18,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="577,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.524,0.465"/>
        <TextBox HorizontalAlignment="Left" Margin="577,292,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
