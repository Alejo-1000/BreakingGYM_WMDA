        <TextBox HorizontalAlignment="Left" Margin="101,112,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="261" Height="27"/>
        <TextBox HorizontalAlignment="Left" Margin="577,163,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="577,249,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="577,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="39,153,369,10"/>
    </Grid>
</Window>
