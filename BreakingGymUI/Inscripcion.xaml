<mah:MetroWindow
     x:Class="BreakingGymUI.Inscripcion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakingGymUI"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Inscripcion" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button x:Name="BtnGuardar" Content="" HorizontalAlignment="Left" Height="48" Margin="671,354,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnEliminar" Content="" HorizontalAlignment="Left" Height="48" Margin="444,354,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnModificar" Content="" HorizontalAlignment="Left" Height="48" Margin="562,354,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>

        <DataGrid HorizontalAlignment="Left" Height="280" Margin="27,128,0,0" VerticalAlignment="Top" Width="315" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFAEAEB2" Foreground="Black" />
        <Label Content="Inscripciones" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="30"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="431,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.315,-0.191" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="#FFFDFBFB"/>
        <Label Content="Membresia" HorizontalAlignment="Left" Margin="406,129,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="#FFFDFBFB"/>
        <ListBox HorizontalAlignment="Left" Height="26" Margin="508,73,0,0" VerticalAlignment="Top" Width="240" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListBox HorizontalAlignment="Left" Height="28" Margin="508,128,0,0" VerticalAlignment="Top" Width="240" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListBox HorizontalAlignment="Left" Height="28" Margin="508,186,0,0" VerticalAlignment="Top" Width="240" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <DatePicker HorizontalAlignment="Left" Height="28" Margin="540,243,0,0" VerticalAlignment="Top" Width="208"/>
        <DatePicker HorizontalAlignment="Left" Height="28" Margin="540,300,0,0" VerticalAlignment="Top" Width="208" mah:DatePickerHelper.DropDownButtonFontSize="7" mah:ValidationHelper.ShowValidationErrorOnMouseOver="True"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="72,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219"/>
        <Label Content="Estado" HorizontalAlignment="Left" Height="28" Margin="433,186,0,0" VerticalAlignment="Top" Width="72" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="#FFFDFBFB"/>
        <Label Content="Fecha de Inscripción" HorizontalAlignment="Left" Height="28" Margin="363,245,0,0" VerticalAlignment="Top" Width="158" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="#FFFDFBFB"/>
        <Label Content="Fecha de Vencimiento" HorizontalAlignment="Left" Height="40" Margin="364,300,0,0" VerticalAlignment="Top" Width="165" FontFamily="Arial Rounded MT Bold" FontSize="14" Foreground="#FFFDFBFB" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.486"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.492"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="BtnRefrescar" Content="" HorizontalAlignment="Left" Height="25" Margin="29,86,0,0" VerticalAlignment="Top" Width="25">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="BtnBuscar" Content="" HorizontalAlignment="Left" Height="25" Margin="310,87,0,0" VerticalAlignment="Top" Width="25" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>
        </Button>
    </Grid>
</mah:MetroWindow>