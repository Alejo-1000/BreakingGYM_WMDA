<mah:MetroWindow x:Class="BreakingGymUI.Cliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="Cliente" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="46,204,204,26"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="46,62,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" RenderTransformOrigin="0.528,0.546" FontSize="14"/>
        <Label Content="Apellido" HorizontalAlignment="Left" Margin="46,109,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Rol" HorizontalAlignment="Left" Margin="74,154,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Celular" HorizontalAlignment="Left" Margin="360,64,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Tipo de documento" HorizontalAlignment="Left" Margin="290,109,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label Content="Documento" HorizontalAlignment="Left" Margin="334,154,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Margin="117,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="161"/>
        <TextBox HorizontalAlignment="Left" Margin="117,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Margin="117,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Margin="438,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <TextBox HorizontalAlignment="Left" Margin="438,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <TextBox HorizontalAlignment="Left" Margin="438,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <Label Content="Cliente" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="36" FontFamily="Arial Rounded MT Bold" Margin="0,-5,0,0"/>
        <Button x:Name="btnRegresar" Content="" HorizontalAlignment="Left" Margin="750,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.589,0.551" Width="40" Height="40" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/regreso.png"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="692,149,0,0" VerticalAlignment="Top" Height="50" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnEliminar" Content="" HorizontalAlignment="Left" Margin="692,239,0,0" VerticalAlignment="Top" Height="51" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnModificar" Content="" HorizontalAlignment="Left" Margin="691,330,0,0" VerticalAlignment="Top" Height="50" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>
    </Grid>
</mah:MetroWindow>
