<mah:MetroWindow x:Class="BreakingGymUI.RegistroAsistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Registro de Asistencia" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Título -->
        <Label Content="Registro de Asistencia" 
               HorizontalAlignment="Center" Margin="0,10,0,0"
               VerticalAlignment="Top" Foreground="White" 
               FontSize="30" FontFamily="Arial Rounded MT Bold"/>

        <!-- DataGrid -->
        <DataGrid x:Name="DgAsistencia" 
                  HorizontalAlignment="Left" Height="231" 
                  Margin="44,165,0,0" VerticalAlignment="Top" 
                  Width="700" AutoGenerateColumns="True" SelectionChanged="DgAsistencia_SelectionChanged"/>

        <!-- Buscar por fecha -->
        <Label Content="Buscar por fecha" 
               HorizontalAlignment="Left" Margin="109,73,0,0"
               VerticalAlignment="Top" Foreground="White" 
               FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <DatePicker x:Name="DtBuscar" 
                    HorizontalAlignment="Left" Height="27" 
                    Margin="98,106,0,0" VerticalAlignment="Top" Width="240"/>

        <!-- Botón Refrescar -->
        <Button x:Name="BtnRefrescar" 
                HorizontalAlignment="Left" Height="25" 
                Margin="54,105,0,0" VerticalAlignment="Top" Width="25" 
                BorderBrush="{x:Null}" Click="BtnRefrescar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>
        </Button>

        <!-- Botón Buscar -->
        <Button x:Name="BtnBuscar" 
                HorizontalAlignment="Left" Height="25" 
                Margin="354,105,0,0" VerticalAlignment="Top" Width="25" 
                BorderBrush="{x:Null}" Click="BtnBuscar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>
        </Button>
    </Grid>
</mah:MetroWindow>