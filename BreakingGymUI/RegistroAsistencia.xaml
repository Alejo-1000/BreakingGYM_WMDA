<mah:MetroWindow x:Class="BreakingGymUI.RegistroAsistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="RegistroAsistencia" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="BtnGuardar" Content="" HorizontalAlignment="Left" Height="50" Margin="529,329,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}" Click="BtnGuardar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnModificar" Content="" HorizontalAlignment="Left" Height="50" Margin="651,329,0,0" VerticalAlignment="Top" Width="50" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>


        <DataGrid x:Name="DgAsistencia" HorizontalAlignment="Left" Height="231" Margin="44,165,0,0" VerticalAlignment="Top" Width="343" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DgAsistencia_SelectionChanged"/>
        <Label Content="Identificación del cliente:" HorizontalAlignment="Left" Height="28" Margin="515,124,0,0" VerticalAlignment="Top" Width="200" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <TextBox x:Name="txtCliente" HorizontalAlignment="Left" Height="27" Margin="490,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240"/>
        <Label Content="Fecha de asistencia:" HorizontalAlignment="Left" Height="34" Margin="529,214,0,0" VerticalAlignment="Top" Width="172" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <DatePicker x:Name="DtFecha" HorizontalAlignment="Left" Height="26" Margin="490,248,0,0" VerticalAlignment="Top" Width="240"/>

        <Button x:Name="btnRefrescar" Content="" HorizontalAlignment="Left" Height="25" Margin="54,105,0,0" VerticalAlignment="Top" Width="25" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnBuscar" Content="" HorizontalAlignment="Left" Height="25" Margin="354,105,0,0" VerticalAlignment="Top" Width="25" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>
        </Button>
        <Label Content="Registro de Asistencia" HorizontalAlignment="Left" Height="58" Margin="235,10,0,0" VerticalAlignment="Top" Width="387" Background="{x:Null}" Foreground="White" FontSize="30" FontFamily="Arial Rounded MT Bold"/>
        <DatePicker x:Name="DtBuscar" HorizontalAlignment="Left" Height="27" Margin="98,106,0,0" VerticalAlignment="Top" Width="240"/>
        <Label Content="Buscar (Asistencia  por fecha)" HorizontalAlignment="Left" Height="33" Margin="109,73,0,0" VerticalAlignment="Top" Width="240" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Height="14" Margin="26,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>


    </Grid>
</mah:MetroWindow>
