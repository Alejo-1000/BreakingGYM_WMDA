<mah:MetroWindow x:Class="BreakingGymUI.InicioAdministrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGymUI"
        mc:Ignorable="d"
        Title="Inicio Administrador" Height="450" Width="800">
    <Grid Background="#FFCDCDCD">
        <DockPanel Height="40" LastChildFill="False" VerticalAlignment="Top" Background="#FF28628C">

            <Button x:Name="BtnInscripcion" Width="148" Height="46" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnInscripcion_Click" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="52" Width="133">
                    <TextBlock Text="Inscripción" FontSize="14" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" Width="81" Height="20"/>
                    <Image Source="/registro-en-linea.png" Width="36" Height="30" StretchDirection="DownOnly"/>
                </StackPanel>
            </Button>
            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnAsistencia" Width="149" Height="41" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFFF8F8" Click="btnAsistencia_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="111">

                    <TextBlock Text="Asistencia" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/lista-de-contactos.png" Width="32" Height="30"/>

                </StackPanel>
            </Button>
            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnMembresia" Width="135" Height="41" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="btnMembresia_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="47" Width="115">
                    <TextBlock Text="Membresia" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/tarifa.png" Width="34" Height="32" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnCliente" Width="107" Height="41" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="btnCliente_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="93">
                    <TextBlock Text="Cliente" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/avatar.png" Width="33" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <GridSplitter Width="2" Background="#FFAEAEB2"/>
            <Button x:Name="btnServicio" Width="124" Height="41" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="btnServicio_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="83" Width="112">
                    <TextBlock Text="Servicio" FontSize="14" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
                    <Image Source="/gym-equipment.png" Width="53" Height="28" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <GridSplitter Background="#FFAEAEB2" DockPanel.Dock="Right" Width="2"/>

            <GridSplitter Background="#FFAEAEB2" Width="2"/>
            <Menu Width="32" Background="#FF28628C" Foreground="Black" Height="37">
                <MenuItem x:Name="BtnOtros" Header="" FontFamily="Arial Rounded MT Bold" FontSize="13" Foreground="White" Height="29" Width="23">
                    <MenuItem.Background>
                        <ImageBrush ImageSource="/opcion.png" AlignmentX="Right" Stretch="Uniform" TileMode="FlipX" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="RelativeToBoundingBox" Viewport="0,0,1,1" AlignmentY="Bottom" />
                    </MenuItem.Background>
                    <MenuItem x:Name="btnUsuarios" Header="Usuarios" Background="#FF28628C" Click="btnUsuarios_Click"/>
                    <MenuItem x:Name="btnReportes" Header="Reportes" Background="#FF28628C" Click="btnReportes_Click"/>
                    <MenuItem x:Name="btnRoles" Header="Roles" Background="#FF28628C" Click="btnRoles_Click"/>
                    <MenuItem x:Name="btnEstado" Header="Estado de Inscripciones" Background="#FF28628C" Click="btnEstado_Click"/>
                    <MenuItem x:Name="btnDocumentos" Header="Documentos de identificación" Background="#FF28628C" Click="btnDocumentos_Click"/>
                </MenuItem>

            </Menu>
            <Menu DockPanel.Dock="Right" Width="51" Height="40" >
                <Menu.Background>
                    <ImageBrush ImageSource="/boton.png"/>
                </Menu.Background>
                <MenuItem Header="" Background="{x:Null}" Foreground="White" FontFamily="Arial Rounded MT Bold" FontSize="13" Height="41" Width="51" Click="MenuItem_Click">

                    <MenuItem x:Name="btnSalir" Header="Salir del Sistema" Background="#FF28628C" Click="btnSalir_Click"/>
                    <MenuItem x:Name="btnCerrarSesion" Header="Cerrar Sesión" Background="#FF28628C"/>
                </MenuItem>
            </Menu>

        </DockPanel>
        <Label Content="¡Bienvenido a Inicio!" HorizontalAlignment="Center" Height="63" VerticalAlignment="Top" Width="402" FontFamily="Times New Roman" FontSize="45" Margin="0,91,0,0"/>
        <Image HorizontalAlignment="Left" Height="184" Margin="310,166,0,0" VerticalAlignment="Top" Width="200" Source="/0a5bcaaf-ccf2-49de-9d75-1f233391d1de.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.339"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>


    </Grid>
</mah:MetroWindow>
